<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginTop="@dimen/top_margin"
    android:background="@color/main_orange"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="2dp"
        android:layout_weight="1"
        android:background="@color/main_orange"
        android:orientation="vertical"
        android:padding="@dimen/top_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="最高温"
                android:textColor="@color/main_white"
                android:textSize="@dimen/future_text_size" />

            <TextView
                android:id="@+id/temperature_day1_up"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/main_white"
                android:textSize="@dimen/future_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="最低温"
                android:textColor="@color/main_white"
                android:textSize="@dimen/future_text_size" />

            <TextView
                android:id="@+id/temperature_day1_down"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/main_white"
                android:textSize="@dimen/future_text_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/temperature_day1_week"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/main_white"

            android:textSize="@dimen/future_text_size_small"

            />


        <TextView
            android:id="@+id/temperature_day1_date"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"

            android:textColor="@color/main_white"
            android:textSize="@dimen/future_text_size"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="2dp"
        android:layout_weight="1"
        android:background="@color/main_white"
        android:orientation="vertical"
        android:padding="6dp">

        <TextView
            android:id="@+id/temperature_day2_up"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"

            android:textSize="@dimen/future_text_size" />

        <TextView
            android:id="@+id/temperature_day2_down"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:gravity="center"
            android:textSize="@dimen/future_text_size" />

        <TextView
            android:id="@+id/temperature_day2_week"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:gravity="center"
            android:textSize="@dimen/future_text_size_small" />

        <TextView
            android:id="@+id/temperature_day2_date"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:gravity="center"
            android:textSize="@dimen/future_text_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="2dp"
        android:layout_weight="1"
        android:background="@color/main_white"
        android:orientation="vertical"
        android:padding="6dp">

        <TextView
            android:id="@+id/temperature_day3_up"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:gravity="center"
            android:textSize="@dimen/future_text_size" />

        <TextView
            android:id="@+id/temperature_day3_down"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"

            android:textSize="@dimen/future_text_size" />

        <TextView
            android:id="@+id/temperature_day3_week"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"

            android:textSize="@dimen/future_text_size_small" />

        <TextView
            android:id="@+id/temperature_day3_date"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:gravity="center"
            android:textSize="@dimen/future_text_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/main_white"
        android:orientation="vertical"
        android:padding="6dp">

        <TextView
            android:id="@+id/temperature_day4_up"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"

            android:textSize="@dimen/future_text_size" />

        <TextView
            android:id="@+id/temperature_day4_down"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"

            android:textSize="@dimen/future_text_size" />

        <TextView
            android:id="@+id/temperature_day4_week"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"

            android:textSize="@dimen/future_text_size_small" />

        <TextView
            android:id="@+id/temperature_day4_date"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"

            android:textSize="@dimen/future_text_size" />

    </LinearLayout>
</LinearLayout>